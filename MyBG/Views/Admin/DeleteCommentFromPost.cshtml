@model MyBG.Models.CommentPostDeleteMessage

@{
	<h1>Are you sure you want to delete this comment?</h1>
	<form method="post" asp-route-id="@Model.Id" enctype="multipart/form-data" asp-action="DeleteCommentFromPostConfirm">
		<p class="user-text">Message for creator of submission</p>
		<textarea asp-for="Message" class="message-area"></textarea>
		<span asp-validation-for="Message" class="text-danger"></span>
		<button type="submit" class="create-button">Delete post</button>
	</form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
