@model MyBG.Models.ApproveModel

@{
	if(Model.EditModel.CreatePage) 
	{
		<h1>Are you sure you want to approve this submission for creation of page @Model.EditModel.PageToEdit.Title ?</h1>
	}
	else
	{
		<h1> Are you sure you want to approve this submission for edit of page @Model.EditModel.PageToEdit.Title ?</h1>
	}
	<form method="post" asp-route-id="@Model.EditModel.ID" enctype="multipart/form-data" asp-action="ConfirmApprove">
		<p class="user-text">Message for creator of submission</p>
		<textarea class="message-area" asp-for="MessageForApproved"></textarea>
		<span asp-validation-for="MessageForApproved" class="text-danger"></span>
		<p>Message for creators of submissions for the same page</p>
		<textarea class="message-area" asp-for="MessageForDeclined"></textarea>
		<span asp-validation-for="MessageForDeclined" class="text-danger"></span>
		<button class="create-button" type="submit">Approve submission</button>
	</form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
