@model AssignAdmin;

<h1>Are you sure you want to remove the admin role from @Model.User ?</h1>
<p>Message for user</p>
<form method="post" asp-action="ConfirmAdminRemove" enctype="multipart/form-data">    
    <input name="Message" asp-for="Message"></input>
    <span asp-validation-for="Message" class="text-danger"></span>
    <input name="User" asp-for="User"></input>
    <button type="submit">Remove role</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
