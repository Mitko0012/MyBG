@model MyBG.Models.SavedPages;

<h1>Your saved pages</h1>

@{
	foreach(var pagey in Model.Pages)
	{
		if (pagey != null)
		{
			<div class="destinationDiv">
				<h3>@pagey.Title</h3>
				<p>@pagey.Summary</p>
                @if(pagey.IsCulture)
                {
                    <a asp-action="CulturePage" asp-controller="Page" asp-route-id="@pagey.Id">View page</a>
                }
                else
                {
                    <a asp-action="PageViewer" asp-controller="Page" asp-route-id="@pagey.Id">View page</a>
                }
            </div>
		}
	}
}