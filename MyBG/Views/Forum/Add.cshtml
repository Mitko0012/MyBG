@model ForumQuestion;
<h1>Add new post</h1>
<form asp-action="PostForum" enctype="multipart/form-data" method="post">
	<label for="TitleForum"></label>
	<br />
	<input id="TitleForum" asp-for="Title"/>
	<span asp-validation-for="Title" class="text-danger"></span>
	<label for="TextForum"></label>
	<br />
	<input id="TextForum" asp-for="Text" />
	<span asp-validation-for="Text" class="text-danger"></span>
	<button type="Submit">Submit the post</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
